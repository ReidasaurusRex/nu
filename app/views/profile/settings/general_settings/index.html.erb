<div class="settings-index">
  <h1>Settings for <%= @profile.full_name %></h1>
  
  <div class="privacy-settings settings-section">
    <h2 class="section-header">Privacy Settings</h2>
    <p class="section-description">Who gets to see what?</p>
    <%= render partial: "profile_matches_user/privacy_settings/overview_list", locals: {privacy: @settings[:privacy]} %>
    <%= link_to "Edit privacy settings", edit_profile_privacy_setting_path(profile_id: @profile.id, id: @profile.privacy_setting.id) %>
  </div> <!-- privacy-settings -->

  <div class="sharing-settings settings-section">
    <h2 class="section-header">Sharing Settings</h2>
    <p class="section-description">What do you post to your followers?</p>
    <%= render partial: "profile_matches_user/sharing_settings/overview_list", locals: {sharing: @settings[:sharing]} %>
    <%= link_to "Edit sharing settings", edit_profile_sharing_setting_path(profile_id: @profile.id, id: @profile.sharing_setting.id) %>
  </div> <!-- sharing-settings -->

</div> <!-- settings-index --> 