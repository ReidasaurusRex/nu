<div class="o-wrapper">

  <div class="o-bubble o-bubble--full">
    
    <h2>Account</h2>

    <div class="o-wrapper--narrow">
    <%= form_for @user do |f|%>
  
      <%= f.text_field :email, autofocus: true, placeholder: "Email" %>

      <%= f.password_field :password, placeholder: "Password" %>
      
      <div class="submit-or-password">
        <div class="submit-form">
          <%= f.submit "Edit email" %>
        </div>
        <div class="change-password-link">
          <%= link_to "Edit password", user_edit_password_path(@user) %>
        </div>
      </div>
    <% end %> <!-- form -->
    </div>
  </div> <!-- o-bubble o-bubble--full -->
  
</div> <!-- o-wrapper  -->