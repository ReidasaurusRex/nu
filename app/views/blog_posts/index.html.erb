<div class="blog-posts-index blog">
  <h1>Blog Posts and Stuff</h1>
  <ul class="blog-posts">
    <% @blog_posts.each do |post| %>
    <li class="blog-post">
      <h2><%= post.title %></h2>
      <h3><%= post.description %></h3>
      <%= link_to "Check it out", blog_post_path(post) %>
    </li>
    <% end %>
  </ul>
</div>