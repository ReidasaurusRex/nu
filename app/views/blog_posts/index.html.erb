<div class="blog-posts-index">
  <ul class="blog-posts">
    <% @blog_posts.each do |post| %>
    <li>
      <h2><%= post.title %></h2>
      <h3><%= post.description %></h3>
      <% post.parsed_body.each do |paragraph| %>
        <p><%= paragraph %></p>
      <% end %>
    </li>
    <% end %>
  </ul>
</div>