<h2>People who follow you</h2>
<% unless followers.empty? %>
  
  <% for follower in followers do %>
    <div class="profile-summary">
      <h3><%= follower.full_name %></h3>
      <h3><%= link_to "View profile", user_profile_path(user_id: user.id, id: follower.id) %></h3>
    </div>
  <% end %>

<% else %>
  
  <h3>You currently have no followers</h3>

<% end %>