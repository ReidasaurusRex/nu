<div class="profile-show">
  <h1><%= @profile.full_name %></h1>
  <% if @profile == @user.profile %>
    <h4><%= link_to "Edit Profile", edit_profile_path(@profile) %></h4>
  <% end %>
  <h3>Active since <%= @profile.start_date %></h3>
  <% if @profile.interests %>
    <h2>Interests</h2>
    <p><%= @profile.interests %></p>
  <% end %>
</div>
