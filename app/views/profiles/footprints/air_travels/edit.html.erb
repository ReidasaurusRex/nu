<div class="wrapper centered-content">

  <div class="component">
    <%= form_for(@air_travel, url: transportation_air_travel_path(transportation_id: @transportation.id, id: @air_travel.id), method: :put) do |f| %>
    <div class="edit-air-travel-form">

      <p class="section-prompt">How many times have you flown over the past year in each class listed below? If none, please leave as zero.</p>

      <div class="text-form-with-errors">
        <%= f.text_field :d_economy, autofocus: true %>
        <p class="form-label">
          <%= f.label :d_economy, "Domestic economy" %>
          <span class="error-message"><%= add_errors_if_any(@air_travel, :d_economy) %></span>
        </p>
      </div>

      <div class="text-form-with-errors">
        <%= f.text_field :d_business %>
        <p class="form-label">
          <%= f.label :d_business, "Domestic business" %>
          <span class="error-message"><%= add_errors_if_any(@air_travel, :d_business) %></span>
        </p>
      </div>

      <div class="text-form-with-errors">
        <%= f.text_field :i_economy %>
        <p class="form-label">
          <%= f.label :i_economy, "International economy" %>
          <span class="error-message"><%= add_errors_if_any(@air_travel, :i_economy) %></span>
        </p>
      </div>

      <div class="text-form-with-errors">
        <%= f.text_field :i_premium_economy %>
        <p class="form-label">
          <%= f.label :i_premium_economy, "International premium economy" %>
          <span class="error-message"><%= add_errors_if_any(@air_travel, :i_premium_economy) %></span>
        </p>
      </div>

      <div class="text-form-with-errors">
        <%= f.text_field :i_business %>
        <p class="form-label">
          <%= f.label :i_business, "International business" %>
          <span class="error-message"><%= add_errors_if_any(@air_travel, :i_business) %></span>
        </p>
      </div>

      <div class="text-form-with-errors">
        <%= f.text_field :i_first %>
        <p class="form-label">
          <%= f.label :i_first, "International first class" %>
          <span class="error-message"><%= add_errors_if_any(@air_travel, :i_first) %></span>
        </p>
      </div>

      <div class="form-submit">
        <%= f.submit "Next question" %>
      </div>

    </div> <!-- edit-air-travel-form -->
    <% end %>
  </div> <!-- component -->
  
</div> <!-- wrapper centered-content -->