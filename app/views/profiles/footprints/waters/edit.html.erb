<div class="o-wrapper">
  
  <div class="o-bubble o-bubble--full c-calculator-questions">
    <%= form_for(@water, url: footprint_water_path(footprint_id: @footprint.id, id: @water.id), method: :put) do |f| %>
      
    <div class="c-calculator-questions__q-block">
      
      <p class="c-calculator-questions__q-block__prompt">Do you use water at your residence?</p>
      <p class="error-message"><%= add_errors_if_any(@water, :use) %></p>
      
      <ul class="o-inline-list c-calculator-questions__q-block__response-list">
        <li class="o-inline-list__li">
          <%= f.radio_button :use, "1", {checked: true, class: "c-calculator-questions__q-block__response-list__response"} %>
          <%= f.label :use, "Yes" %>
        </li>
        <li class="o-inline-list__li">
          <%= f.radio_button :use, "0", class: "c-calculator-questions__q-block__response-list__response" %>
          <%= f.label :use, "No" %>
        </li>
      </ul>

    </div> <!-- question-and-response -->
    
    <div class="c-calculator-questions__q-block">
      
      <p class="c-calculator-questions__q-block__prompt">If yes, do you know the amount?</p>
      <p class="error-message"><%= add_errors_if_any(@water, :known) %></p>
      
      <ul class="o-inline-list c-calculator-questions__q-block__response-list">
        <li class="o-inline-list__li">
          <%= f.radio_button :known, "1", {checked: true, class: "c-calculator-questions__q-block__response-list__response"} %>
          <%= f.label :known, "Yes" %>
        </li>
        <li class="o-inline-list__li">
          <%= f.radio_button :known, "0", class: "c-calculator-questions__q-block__response-list__response" %>
          <%= f.label :known, "No" %>
        </li>
      </ul>

    </div> <!-- question-and-response -->
    
    <div class="c-calculator-questions__q-block">
      
      <p class="c-calculator-questions__q-block__prompt">What is the amount, in what units?</p>
      <p class="error-message">
        <%= add_errors_if_any(@water, :measurement_amount) %>
        <%= add_errors_if_any(@water, :measurement_type) %>
      </p>

      <div>
        <%= f.text_field :measurement_amount, placeholder: "Amount..." %>
        <%= f.select :measurement_type, [['gallons', 'gallons'], ['hundred cubic feet', '100cf']] %>
      </div> <!-- text-field-with-unit -->

    </div> <!-- question-and-response -->

    <div>
      <%= f.submit 'Next question' %>
    </div>

    
    <% end %> <!-- form -->
  </div> <!-- o-bubble o-bubble--full -->

</div> <!-- o-wrapper -->