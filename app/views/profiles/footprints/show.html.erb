<div class="o-wrapper">
  
  <div class="o-bubble o-bubble--full c-footprint-results">
    <h2 class="c-footprint-results__title">
      Final Results
    </h2>
    <%= render partial: "profiles/footprints/footprint_summary", locals: {footprint: @footprint, index: 0} %>
    <div class="footprint-overview">
      <h1>Emissions report</h1>
      <h3 class="footprint-date"><%= @footprint.friendly_creation_date %></h3>
      <h2 class="total-emissions">Total emissions: <span><%= @footprint.emissions_or_pending %></span></h2>
    </div>

    <div class="section-overview">
      <h2>Diet</h2>
      <%= footprint_section_summary("diet") %>
    </div> <!-- section-overview -->

    <div class="section-overview">
      <h2>Water</h2>
      <%= footprint_section_summary("water") %>
    </div> <!-- section-overview -->

    <div class="section-overview">
      <h2>Waste</h2>
      <%= footprint_section_summary("waste") %>
    </div> <!-- section-overview -->

    <div class="section-overview">
      <h2>Transportation</h2>
      <%= footprint_section_summary("transportation") %>
    </div> <!-- section-overview -->

    <div class="section-overview">
      <h2>Home Energy</h2>
      <%= footprint_section_summary("home_energy") %>
    </div> <!-- section-overview -->
  </div> <!-- o-bubble o-bubble--full -->
  
</div> <!-- o-wrapper -->