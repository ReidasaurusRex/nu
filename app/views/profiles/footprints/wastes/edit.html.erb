<div class="o-wrapper">
  
  <div class="o-bubble o-bubble--full c-calculator-questions">
    <%= form_for(@waste, url: footprint_waste_path(footprint_id: @footprint.id, id: @waste.id), method: :put) do |f| %>

    <div class="c-calculator-questions__q-block">
      <p class="c-calculator-questions__q-block__prompt">Do you recycle glass?</p>
      <p class="error-message"><%= add_errors_if_any(@waste, :glass) %></p>

      <ul class="o-inline-list">
        <li class="o-inline-list__li">
          <%= f.radio_button :glass, true, {checked: true, class: "c-calculator-questions__q-block__response-list__response"} %>
          <%= f.label :glass, "Yes" %>
        </li>
        <li class="o-inline-list__li">
          <%= f.radio_button :glass, false,class: "c-calculator-questions__q-block__response-list__response" %>
          <%= f.label :glass, "No" %>
        </li>
      </ul>
    </div> <!-- c-calculator-questions__q-block -->

    <div class="c-calculator-questions__q-block">
