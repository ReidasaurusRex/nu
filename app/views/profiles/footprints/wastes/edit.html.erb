<div class="wrapper centered-content">
  
  <div class="o-bubble">
    <%= form_for(@waste, url: footprint_wastes_path(footprint_id: @footprint.id), method: :put) do |f| %>
    <div class="waste-form">

      <div class="question-and-response">
        <p class="form-question">Do you recycle glass?</p>
        <p class="error-message"><%= add_errors_if_any(@waste, :glass) %></p>

        <ul class="radio-button-list inline-list">
          <li>
            <%= f.radio_button :glass, true, {checked: true} %>
            <%= f.label :glass, "Yes" %>
          </li>
          <li>
            <%= f.radio_button :glass, false %>
            <%= f.label :glass, "No" %>
          </li>
        </ul>
      </div> <!-- question-and-response -->

      <div class="question-and-response">
        <p class="form-question">Do you recycle metal?</p>
        <p class="error-message"><%= add_errors_if_any(@waste, :metal) %></p>

        <ul class="radio-button-list inline-list">
          <li>
            <%= f.radio_button :metal, true, {checked: true} %>
            <%= f.label :metal, "Yes" %>
          </li>
          <li>
            <%= f.radio_button :metal, false %>
            <%= f.label :metal, "No" %>
          </li>
        </ul>
      </div> <!-- question-and-response -->

      <div class="question-and-response">
        <p class="form-question">Do you recycle plastic?</p>
        <p class="error-message"><%= add_errors_if_any(@waste, :plastic) %></p>

        <ul class="radio-button-list inline-list">
          <li>
            <%= f.radio_button :plastic, true, {checked: true} %>
            <%= f.label :plastic, "Yes" %>
          </li>
          <li>
            <%= f.radio_button :plastic, false %>
            <%= f.label :plastic, "No" %>
          </li>
        </ul>
      </div> <!-- question-and-response -->

