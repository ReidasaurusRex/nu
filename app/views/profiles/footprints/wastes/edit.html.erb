          <%= f.label :newspaper, "Yes" %>
        </li>
        <li class="o-inline-list__li">
          <%= f.radio_button :newspaper, false,class: "c-calculator-questions__q-block__response-list__response" %>
          <%= f.label :newspaper, "No" %>
        </li>
      </ul>
    </div> <!-- c-calculator-questions__q-block -->

