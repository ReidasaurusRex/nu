<div class="o-wrapper">
  
  <div class="challenge-headers">
    <h4>
      <%= link_to "Back to Challenges", profile_challenges_path(profile_id: @profile.id) %>
    </h4>
  </div>

  <div class="o-bubble o-bubble--full">
    <%= image_tag(@challenge.image_path) %>
    <h1><%= @challenge.title.capitalize %></h1>
    <h2><%= @challenge.caption %></h2>
    <p><%= @challenge.description %></p>
    <h4>
      <%= link_to("Start challenge", profile_profile_started_challenges_path(profile_id: @profile.id, profile_started_challenge: {challenge_id: @challenge.id, progress_category: @challenge.progress_category}), method: :post) %>
      <%= link_to "Back to challenges", profile_challenges_path(profile_id: @profile.id) %>
    </h4>
  </div> <!-- o-bubble o-bubble--full -->

</div> <!-- o-wrapper -->