<div class="newsfeed-index">
  <h1>Your Feed</h1>
  <h4><%= link_to "Manage RSS Feeds", profile_profile_feeds_path(@profile.id) %></h4>

  <% if @profile == @user.profile %>
    <div class="new-newsfeed-item">
      <%= render partial: "profiles/newsfeed_items/new_newsfeed_item_form", locals: {item: @newsfeed_item, profile: @profile} %>
    </div>
  <% end %> <!-- user profile check -->

  <% if @newsfeed_items.empty? %>
    <h2>Looks like your feed is empty!</h3>
  <% else %>
    <%= render partial: "profiles/newsfeed_items/newsfeed_list", locals: {newsfeed_items: @newsfeed_items, profile: @profile} %>
  <% end %>
</div>