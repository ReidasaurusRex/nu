<div class="diets-new">
  <%= form_for(@diet, url: footprint_diet_profiles_path(
  footprint_id: @footprint.id)) do |f| %>
  <div class="new-diet-form">
    <h2>
      What term best describes your diet?
      <span class="error-message"><%= add_errors_if_any(@diet, :diet_type) %></span>
    </h2>
    <div class="radio-button-form">
      <%= f.radio_button :diet_type, :typical %>
      <%= f.label :diet_type, 'Average' %>
    </div>
    <div class="radio-button-form">
      <%= f.radio_button :diet_type, :meat_heavy %>
      <%= f.label :diet_type, 'Meat heavy' %>
    </div>
    <div class="radio-button-form">
      <%= f.radio_button :diet_type, :no_beef %>
      <%= f.label :diet_type, 'No beef' %>
    </div>
    <div class="radio-button-form">
      <%= f.radio_button :diet_type, :pescatarian %>
      <%= f.label :diet_type, 'Pescatarian' %>
    </div>
    <div class="radio-button-form">
      <%= f.radio_button :diet_type, :vegetarian %>
      <%= f.label :diet_type, 'Vegetarian' %>
    </div>
    <div class="radio-button-form">
      <%= f.radio_button :diet_type, :vegan %>
      <%= f.label :diet_type, 'Vegan' %>
    </div>
    <div class="submit-form">
      <%= f.submit 'Next question' %>
    </div>
  </div>
  <% end %>
</div>