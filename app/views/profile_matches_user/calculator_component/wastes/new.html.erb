        <li>
          <%= f.radio_button :magazines, false %>
          <%= f.label :magazines, "No" %>
        </li>
      </ul>
    </div> <!-- question-and-response -->

    <div class="submit-form">
      <%= f.submit 'Next question' %>
    </div>

  </div> <!-- waste-form -->
  <% end %>
  
</div>