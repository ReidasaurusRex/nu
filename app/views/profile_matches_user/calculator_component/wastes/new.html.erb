<div class="wastes-new">
  <%= form_for(@waste_profile, url: footprint_waste_profiles_path(footprint_id: @footprint.id), method: :post) do |f| %>
  <div class="waste-form">

    <div class="question-and-response">
      <p class="form-question">Do you recycle glass?</p>
      <p class="error-message"><%= add_errors_if_any(@waste_profile, :glass) %></p>

      <ul class="radio-button-list inline-list">
        <li>
          <%= f.radio_button :glass, true, {checked: true} %>
          <%= f.label :glass, "Yes" %>
        </li>
        <li>
          <%= f.radio_button :glass, false %>
          <%= f.label :glass, "No" %>
        </li>
      </ul>
    </div> <!-- question-and-response -->

    <div class="question-and-response">
      <p class="form-question">Do you recycle metal?</p>
      <p class="error-message"><%= add_errors_if_any(@waste_profile, :metal) %></p>

