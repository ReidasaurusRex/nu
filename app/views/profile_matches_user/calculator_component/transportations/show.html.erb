<div class="calculator-component transportations-show">
  <h1>Transportation Overview <span><%= @footprint.friendly_creation_date %></span></h1>

  <h2>Emissions: <span><%= @transportation.emissions_overview %>lbs CO2e</span></h2>

  <div class="transportation-component">
    <%= render partial: "profile_matches_user/calculator_component/transportations/vehicle_section_summary", locals: {vehicle: @transportation.vehicle} %>
  </div>
  <div class="transportation-component">
    <%= render partial "profile_matches_user/calculator_component/transportations/public_transportation_section_summary", locals: {public_transportation: @transportation.public_transportation} %>
  </div>
  <div class="transportation-component">
    <%= render partial: "profile_matches_user/calculator_component/transportations/air_travel_section_summary", locals: {air_travel: @transportation.air_travel} %>
  </div>
</div>