<%= form_for(item, url: profile_newsfeed_items_path(profile_id: @profile.id)) do |f| %>
  <h2>Post some shit</h2>

  <div class="text-form-with-errors">
    <%= f.text_field :header, autofocus: true %>
    <p class="form-label">
      <%= f.label :header %>
      <span class="error-message"><%= add_errors_if_any(item, :header) %></span>
    </p>
  </div>

  <div class="text-form-with-errors">
    <%= f.text_area(:content, rows: 3) %>
    <p class="form-label">
      <%= f.label :content %>
      <span class="error-message"><%= add_errors_if_any(item, :content) %></span>
    </p>
  </div>

  <div class="submit-form">
    <%= f.submit "Post it up" %>
  </div>

<% end %>