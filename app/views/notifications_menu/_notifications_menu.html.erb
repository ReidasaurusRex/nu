<ul>
  <li class="notifications-title-item">
    Notifications
    <span class="right-side"><%= link_to "Settings", profile_general_settings_path(profile_id: profile.id) %></span>
  </li>
  <% if profile.notifications.empty? %>
    <li>
      <p>No notifications!</p>
    </li>
  <% else %>
    <% profile.notifications.last(5).each do |notification| %>
      <li>
        <p><%= notification.text %></p>
        <p><%= link_to "View", notification.link %></p>
      </li>
    <% end %>
  <% end %>
  
</ul>